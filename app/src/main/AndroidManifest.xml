<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.guagua.moses.drawermosesnews">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/moses_news_icon"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme">
        <activity
            android:name="com.guagua.moses.drawermosesnews.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.guagua.moses.drawermosesnews.TheMainActivity" />
        <activity android:name="com.guagua.moses.drawermosesnews.contents.news.NewsCategoryActivity" />
        <activity android:name="com.guagua.moses.drawermosesnews.contents.news.NewsDetailActivity" />
        <activity android:name="com.guagua.moses.drawermosesnews.contents.SettingActivity" />
        <activity android:name="com.guagua.moses.drawermosesnews.contents.videos.VideoPlayActivity" />
        <activity android:name="com.guagua.moses.drawermosesnews.contents.weather.WeatherActivity" />
        <activity android:name="com.guagua.moses.drawermosesnews.contents.weather.ZoneActivity" />
    </application>

</manifest>
